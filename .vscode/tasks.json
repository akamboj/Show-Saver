{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-compose build (dev)",
            "type": "shell",
            "command": "docker compose -f ./compose.dev.yaml build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "docker-compose up (dev)",
            "type": "shell",
            "command": "docker compose -f ./compose.dev.yaml up --build"
        }
    ]
}