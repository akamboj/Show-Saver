    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Run script",
            "type": "debugpy",
            "request": "launch",
            "program": "showsaver/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "CONFIG_DIR": "./.local/config",
                "SHOW_DIR": "./.local/tmp",
                "TMP_DIR": "./.local/tvshows",
                "FLASK_DEBUG": "true"
            }
        },
        {
            "name": "Docker: Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/showsaver",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        }
    ]
}